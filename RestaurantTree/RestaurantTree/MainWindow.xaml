<Window x:Class="RestaurantTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Restaurant Menu" Height="450" Width="600">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="🍽 GourmetBytes Menu" FontSize="20" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Tree View for Menu -->
        <TreeView x:Name="MenuTree" Grid.Row="1" Margin="0,0,0,10"/>

        <!-- Controls for Adding Items -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <TextBox x:Name="txtItemName" Width="150" Margin="5" />
            <Button Content="Add Under Selected" Click="AddItem_Click" Margin="5"/>
            <TextBox x:Name="txtSearch" Width="150" Margin="5" />
            <Button Content="Search" Click="SearchItem_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
