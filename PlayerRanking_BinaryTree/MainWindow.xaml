<Window x:Class="PlayerRanking_BinaryTree.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Player Rankings (Binary Search Tree)" Height="520" Width="986">

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="🏆 Player Rankings (Binary Search Tree)"
                   FontSize="22" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,8"/>

        <!-- Input + Buttons -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,8,0,8">

            <!-- Player Details Input -->
            <StackPanel Margin="6,0">
                <TextBlock Text="Player Name"/>
                <TextBox x:Name="txtName" Width="160"/>
            </StackPanel>

            <StackPanel Margin="6,0">
                <TextBlock Text="Ranking (int)"/>
                <TextBox x:Name="txtRanking" Width="100"/>
            </StackPanel>

            <StackPanel Margin="6,0">
                <TextBlock Text="Points (int)"/>
                <TextBox x:Name="txtPoints" Width="100"/>
            </StackPanel>

            <!-- Add Player Button -->
            <Button Content="Add Player" Width="110" Margin="10,18,0,0"
                    Click="AddPlayer_Click"/>

            <!-- Search Player by Ranking -->
            <StackPanel Margin="20,0,0,0">
                <TextBlock Text="Search by Ranking"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txtSearchRanking" Width="100" Margin="0,0,6,0"/>
                    <Button Content="Search" Width="80" Click="SearchPlayer_Click"/>
                </StackPanel>
            </StackPanel>

        </StackPanel>

        <!-- Display Players -->
        <GroupBox Grid.Row="2" Header="Players (ascending by ranking)" Margin="0,0,0,8">
            <ListBox x:Name="lstPlayers"/>
        </GroupBox>

        <!-- Status Message -->
        <TextBlock Grid.Row="3" x:Name="txtStatus" Foreground="DarkBlue" FontStyle="Italic"/>

    </Grid>
</Window>
